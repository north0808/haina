<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping

>

    <class
            name="com.haina.beluga.log.domain.Log"
            table="LOG"
    >

        <cache 
            usage="read-write"
        />

    <id
        name="id"
            column="ID"
            unsaved-value="null"
    >

    <!-- The generator-class attribute of @hibernate.id is deprecated, use the @hibernate.generator tag instead -->
    <generator class="uuid.hex">

    </generator>

    </id>

        <property
            name="handle"
                    column="HANDLE"
                length="20"
        >

        </property>

        <property
            name="infoClass"
                    column="INFOCLASS"
                length="50"
        >

        </property>

        <property
            name="ip"
                    column="IP"
                length="20"
        >

        </property>

        <property
            name="logTime"
                    column="LOGTIME"
                length="20"
        >

        </property>

        <property
            name="remark"
                    column="REMARK"
                length="200"
        >

        </property>

        <property
            name="roleName"
                    column="ROLENAME"
                length="20"
        >

        </property>

        <property
            name="version"
                    column="VERSION"
        >

        </property>

    </class>    

</hibernate-mapping>

