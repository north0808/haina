<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping

>

    <class
            name="com.haina.beluga.domain.UserProfileExt"
            table="UserProfileExt"
            optimistic-lock="version"
    >

        <cache 
            usage="read-write"
        />

    <id
        name="id"
                type="string"
            length="32"
            unsaved-value="null"
    >

            <column
                name="id" 
                sql-type="char(32)"
            />

    <generator
        class="uuid.hex"
    >

    </generator>

    </id>

        <version
            name="version"
            column="version"
            type="long"
        />

        <property
            name="commKey"
                    type="integer"
                not-null="true"
        >

            <column
                name="commKey" 
                sql-type="smallint"
            />

        </property>

        <property
            name="commValue"
                    type="string"
                length="128"
                not-null="true"
        >

            <column
                name="commValue" 
                sql-type="varchar(256)"
            />

        </property>

        <many-to-one
            name="contactUser"
                not-null="true"
                cascade="save-update"
                outer-join="true"
                insert="true"
                update="false"
                lazy="false"
        >

            <column
                name="userId" 
                sql-type="char(32)"
            />

        </many-to-one>

        <property
            name="remark"
                    type="string"
                    column="remark"
                length="1000"
        >

        </property>

    </class>    

</hibernate-mapping>

