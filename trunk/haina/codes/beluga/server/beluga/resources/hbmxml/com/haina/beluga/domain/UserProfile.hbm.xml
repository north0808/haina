<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping

>

    <class
            name="com.haina.beluga.domain.UserProfile"
            table="UserProfile"
            optimistic-lock="version"
    >

        <cache 
            usage="read-write"
        />

    <id
        name="id"
                type="string"
            length="32"
            unsaved-value="null"
    >

            <column
                name="id" 
                sql-type="char(32)"
            />

    <generator
        class="uuid.hex"
    >

    </generator>

    </id>

        <version
            name="version"
            column="version"
            type="long"
        />

        <property
            name="nickName"
                    type="string"
                    column="nickName"
                length="64"
        >

        </property>

        <property
            name="name"
                    type="string"
                    column="name"
                length="64"
        >

        </property>

        <property
            name="age"
                    type="integer"
                    column="age"
        >

        </property>

        <property
            name="photo"
                    type="string"
                    column="photo"
                length="128"
        >

        </property>

        <property
            name="identification"
                    type="string"
                    column="identification"
                length="128"
        >

        </property>

        <property
            name="brithday"
                    type="timestamp"
        >

            <column
                name="brithday" 
                sql-type="timestamp"
            />

        </property>

        <property
            name="url"
                    type="string"
                    column="url"
                length="2000"
        >

        </property>

        <property
            name="signature"
                    type="string"
                    column="url"
                length="128"
        >

        </property>

        <property
            name="emailPref"
                    type="string"
                    column="emailPref"
                length="256"
        >

        </property>

        <property
            name="telPref"
                    type="string"
                    column="telPref"
                length="80"
        >

        </property>

        <property
            name="imPref"
                    type="string"
                    column="imPref"
                length="256"
        >

        </property>

        <property
            name="ring"
                    type="string"
                    column="ring"
                length="128"
        >

        </property>

        <property
            name="org"
                    type="string"
                    column="org"
                length="128"
        >

        </property>

        <property
            name="title"
                    type="string"
                    column="title"
                length="128"
        >

        </property>

        <property
            name="note"
                    type="string"
                    column="note"
                length="1000"
        >

        </property>

        <many-to-one
            name="contactUser"
                not-null="true"
                cascade="save-update"
                outer-join="true"
                insert="true"
                update="false"
                lazy="false"
        >

            <column
                name="userId" 
            />

        </many-to-one>

        <property
            name="remark"
                    type="string"
                    column="remark"
                length="1000"
        >

        </property>

        <property
            name="sex"
                    type="com.haina.beluga.domain.enumerate.SexEnumHibernateType"
        >

            <column
                name="sex" 
                sql-type="smallint"
            />

        </property>

    </class>    

</hibernate-mapping>

