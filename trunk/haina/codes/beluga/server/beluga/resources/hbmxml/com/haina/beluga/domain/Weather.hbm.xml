<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping

>

    <class
            name="com.haina.beluga.domain.Weather"
            table="Weather"
    >

        <cache 
            usage="read-write"
        />

    <id
        name="id"
            column="ID"
            unsaved-value="null"
    >

    <!-- The generator-class attribute of @hibernate.id is deprecated, use the @hibernate.generator tag instead -->
    <generator class="uuid.hex">

    </generator>

    </id>

        <property
            name="date"
                    column="date"
                length="20"
        >

        </property>

        <property
            name="weatherCityCode"
                    column="weatherCityCode"
                length="20"
        >

        </property>

        <property
            name="weatherType"
                    column="weatherType"
                length="50"
        >

        </property>

        <property
            name="high"
                    column="high"
        >

        </property>

        <property
            name="low"
                    column="low"
        >

        </property>

        <property
            name="wind"
                    column="wind"
                length="300"
        >

        </property>

        <property
            name="version"
                    column="VERSION"
        >

        </property>

    </class>    

</hibernate-mapping>

